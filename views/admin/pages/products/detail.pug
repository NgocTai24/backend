extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-success(5000)
  +alert-error(5000)

  if(product.title)
    h1(class="mb-4") #{product.title}

  if(product.price)
    h1(class="mb-4") Giá:  <b>#{product.title}$</b>

  if(product.discountPercentage)
    h1(class="mb-4") Giảm Giá:  <b>#{product.discountPercentage}%</b>    
  
  if(product.stock)
    h1(class="mb-4") Còn Lại:  <b>#{product.stock}$</b>

  if(product.thumbnail)
    div(class="mb-4")
      img(
        src= product.thumbnail
        style = "width: 100px"
      )
  if(product.status)
    div(class="mb-4")
      spam Trạng Thái
      if(product.status === "active")
        <span class="badge bg-success">Hoạt Đồng</span>
      else
        <span class="badge bg-danger">Dừng Hoạt Động</span>

  if(product.position)
    h1(class="mb-4") Vị Trí:  <b>#{product.position}</b>

  if(product.description)
    h1(class="mb-4") Mô tả:  <b>#{product.description}</b>        
  
  a(
    href=`${prefixAdmin}/products/edit/${product.id}`
    class="btn btn-warning" 
  ) Chỉnh Sửa

  script(src="/admin/js/product.js")